<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @picture, local: true) do |form| %>
  <%= form.hidden_field :image %>
  <%= form.hidden_field :comment %>

  <p>タイトル:<%= @picture.image %></p>
  <p>本文:<%= @picture.comment %></p>
  <%= form.submit  "登録する" %>
  
  <%= form.submit "戻る", name: 'back' %>
<% end %>

