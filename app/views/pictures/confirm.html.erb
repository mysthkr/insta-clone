<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @picture, local: true) do |form| %>
  <%= form.hidden_field :image %>
  <%= form.hidden_field :comment %>

  <p>写真:<%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %></p>
  <%= form.hidden_field :image_cache %>
  <p>コメント:<%= @picture.comment %></p>
  <%= form.submit  "登録する" %>
  
  <%= form.submit "戻る", name: 'back' %>
<% end %>

